<div class="flex justify-center items-center min-h-screen bg-brand">
  <div class="w-full max-w-md bg-white p-12 rounded-2xl shadow-lg">
    <h2 class="text-2xl font-bold text-center text-[#007a3f] mb-6">ログイン</h2>

    <%= form_with(model: resource, url: session_path(resource_name), class: "space-y-4") do |f| %>
      <div>
        <%= f.label :email, "メールアドレス", class: "block text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-[#007a3f]" %>
      </div>

      <div>
        <%= f.label :password, "パスワード", class: "block text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-[#007a3f]" %>
      </div>

      <div>
        <%= f.submit "ログイン", class: "w-full btn" %>
      </div>
    <% end %>
  </div>
</div>

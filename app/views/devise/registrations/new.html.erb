<div class="flex justify-center items-center min-h-screen bg-brand">
  <div class="w-full max-w-md bg-white p-12 rounded-2xl shadow-lg">
    <h2 class="text-2xl font-bold text-center text-[#007a3f] mb-6">新規登録</h2>

    <% if resource.errors.any? %>
    <div class="mb-4 p-4 bg-red-100 text-red-700 rounded-lg">
      <h3 class="font-bold mb-2">入力内容にエラーがあります</h3>
      <ul class="list-disc list-inside">
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <%= form_with(model: resource, url: registration_path(resource_name), class: "space-y-4") do |f| %>
      <div>
        <%= f.label :name, "名前", class: "block text-gray-700 mb-1" %>
        <%= f.text_field :name, autofocus: true, class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-[#007a3f]" %>
      </div>

      <div>
        <%= f.label :email, "メールアドレス", class: "block text-gray-700 mb-1" %>
        <%= f.email_field :email, class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-[#007a3f]" %>
      </div>

      <div>
        <%= f.label :password, "パスワード", class: "block text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-[#007a3f]" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "パスワード(確認)", class: "block text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-[#007a3f]" %>
      </div>

      <div>
        <%= f.submit "登録する", class: "w-full btn" %>
      </div>
    <% end %>
  </div>
</div>

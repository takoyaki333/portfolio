<header class="sticky top-0 z-50 bg-brand border-b-4 border-logo" data-controller="menu">
  <div class="container mx-auto px-4">
    <div class="flex h-16 items-center justify-between text-main">
      
      <!-- 左：ロゴ -->
      <div class="flex items-center gap-2">
        <%= link_to root_path do %>
          <%= image_tag "logo.png", alt: "Carebit Logo", class: "h-12 w-auto" %>
        <% end %>
        <span class="text-xl font-bold text-logo">Carebit</span>
      </div>

      <!-- 右：ログイン/ログアウト + ハンバーガーメニュー -->
      <div class="flex items-center gap-4">
        <% if defined?(user_signed_in?) && user_signed_in? %>
          <span class="hidden sm:inline text-sm font-sans">
            こんにちは、<%= current_user.try(:name) || "ユーザー" %> さん
          </span>
          <%= link_to (defined?(destroy_user_session_path) ? destroy_user_session_path : "#"),
                      data: { turbo_method: :delete },
                      class: "btn" do %>
            ログアウト
          <% end %>
        <% else %>
          <%= link_to (defined?(new_user_session_path) ? new_user_session_path : "#"),
                      class: "btn" do %>
            ログイン
          <% end %>
        <% end %>

        <!-- ハンバーガーメニュー -->
        <div class="relative">
          <button data-action="click->menu#toggle" class="p-2 text-2xl focus:outline-none">
            ☰
          </button>
          <div data-menu-target="items"
               class="hidden absolute right-0 mt-2 w-48 bg-white shadow-lg rounded text-gray-700">
            <%= menu_link_to "トップページ", root_path %>
            <% if user_signed_in? %>
              <%= menu_link_to "マイページ", mypage_path %>
              <%= menu_link_to "実績確認", achievements_path %>
              <%= menu_link_to "お問い合わせ", "#" %>
              <%= menu_link_to "利用規約", "#" %>
              <%= menu_link_to "プライバシーポリシー", "#" %>
            <% else %>
              <%= menu_link_to "新規登録", new_user_registration_path %>
              <%= menu_link_to "ログイン", new_user_session_path %>
              <%= menu_link_to "お問い合わせ", "#" %>
              <%= menu_link_to "利用規約", "#" %>
              <%= menu_link_to "プライバシーポリシー", "#" %>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</header>

<% flash.each do |key, value| %>
  <% alert_class = case key %>
    <% when "notice" then "bg-green-100 text-green-700" %>
    <% when "alert" then "bg-red-100 text-red-700" %>
    <% else "bg-gray-100 text-gray-700" %>
  <% end %>

  <div class="mb-4 p-4 rounded-lg <%= alert_class %>">
    <%= value %>
  </div>
<% end %>